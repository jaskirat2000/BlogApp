<% include partials/header.ejs %>

<div class="ui grid">
    <div class="nine wide column centered">
        <div class="container main segment ui">

            <h3 class="ui dividing header">Edit <%= blog.title%></h3>

            <form action="/blogs/<%= blog._id%>?_method=PUT" method="post" class="ui form small eight wide centered">
                <div class="field">
                    <div class="field form-input">
                        <input type="text" name="blogs[title]" placeholder="Title" value="<%= blog.title%>">
                    </div>

                    <div class="field form-input">
                        <input type="url" name="blogs[img]" placeholder="Image URL" value="<%= blog.img%>">
                    </div>

                    <div class="field form-input">
                        <textarea name="blogs[body]" placeholder="Your Blog.." rows="5"><%- blog.body%></textarea>
                    </div>
                    <div class="btn-container field form-input">
                        <button class="ui animated button primary small eight wide centered">
                            <div class="visible content">UPDATE</div>
                            <div class="hidden content">
                                <i class="right arrow icon"></i>
                            </div>
                        </button>
                    </div>
                </div>


            </form>
        </div>

    </div>

</div>


<% include partials/footer.ejs %>