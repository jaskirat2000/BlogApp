<% include partials/header.ejs%>

<div class="container text main segment ui">
<div class="ui header huge">Blog App</div>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function (blog) { %>
            <div class="item">
                <div class="image rounded">
                    <img src="<%= blog.img%>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id%>"><%= blog.title%></a>
                    <div class="meta">
                        <span><%= blog.date.toDateString()%></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0,200)+"  "%><a href="/blogs/<%= blog._id%>">more..</a></p>
                    </div>
                </div>
            </div>
            <%})%>
        </div>
    </div>



</div>

<% include partials/footer.ejs%>
